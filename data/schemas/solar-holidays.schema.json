{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://amlich.local/schemas/solar-holidays.schema.json",
  "title": "Solar holidays",
  "type": "object",
  "required": ["holidays"],
  "additionalProperties": false,
  "properties": {
    "holidays": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "isSolar",
          "solarDay",
          "solarMonth",
          "category",
          "isMajor",
          "names"
        ],
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "isSolar": { "type": "boolean", "const": true },
          "solarDay": { "type": "integer", "minimum": 1, "maximum": 31 },
          "solarMonth": { "type": "integer", "minimum": 1, "maximum": 12 },
          "category": {
            "type": "string",
            "enum": [
              "public-holiday",
              "commemorative",
              "professional",
              "social",
              "international"
            ]
          },
          "isMajor": { "type": "boolean" },
          "names": {
            "type": "object",
            "required": ["vi", "en"],
            "additionalProperties": false,
            "properties": {
              "vi": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "en": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    }
  }
}
