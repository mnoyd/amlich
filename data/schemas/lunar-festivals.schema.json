{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://amlich.local/schemas/lunar-festivals.schema.json",
  "title": "Lunar festivals",
  "type": "object",
  "required": ["festivals"],
  "additionalProperties": false,
  "properties": {
    "festivals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "lunarDay",
          "lunarMonth",
          "yearOffset",
          "category",
          "isMajor",
          "names"
        ],
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "lunarDay": { "type": "integer", "minimum": 0, "maximum": 30 },
          "lunarMonth": { "type": "integer", "minimum": 0, "maximum": 12 },
          "yearOffset": { "type": "integer", "enum": [-1, 0] },
          "category": { "type": "string", "const": "festival" },
          "isMajor": { "type": "boolean" },
          "isSolar": { "type": "boolean" },
          "solarDay": { "type": "integer", "minimum": 1, "maximum": 31 },
          "solarMonth": { "type": "integer", "minimum": 1, "maximum": 12 },
          "names": {
            "type": "object",
            "required": ["vi", "en"],
            "additionalProperties": false,
            "properties": {
              "vi": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "en": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        "allOf": [
          {
            "if": {
              "properties": { "isSolar": { "const": true } },
              "required": ["isSolar"]
            },
            "then": {
              "required": ["solarDay", "solarMonth"]
            }
          }
        ]
      }
    }
  }
}
