{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AmLich",
  "version": "0.1.2",
  "identifier": "com.amlich.calendar",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Âm Lịch - Vietnamese Lunar Calendar",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Vietnamese Lunar Calendar",
    "longDescription": "Âm Lịch is a beautiful Vietnamese lunar calendar app that displays lunar dates, Can Chi (Heavenly Stems and Earthly Branches), Tiết Khí (Solar Terms), auspicious hours, and Vietnamese holidays.",
    "copyright": "© 2024 Âm Lịch",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "desktopTemplate": "amlich.desktop"
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/mnoyd/amlich/releases/latest/download/latest.json"
      ],
      "pubkey": "REPLACE_WITH_TAURI_UPDATER_PUBLIC_KEY"
    }
  }
}
